<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.philips.lighting.quickstart"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- Permissions required to Waking Lock if device screen is off -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <!-- Permissions for playing alarm sound out of uri stored in preferences -->
    <uses-permission android:name="android.permission.MANAGE_DOCUMENTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_sleeping_in_bed_green"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".PHHomeActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.recek.huewakeup.app.MainActivity"
            android:label="@string/txt_selectbridges" />
        <activity
            android:name=".PHPushlinkActivity"
            android:label="@string/app_name" />
        <activity android:name="com.recek.huewakeup.alarm.AlarmActivity" />
        <activity android:name="com.recek.huewakeup.settings.AlarmSettingsActivity" />
        <activity android:name="com.recek.huewakeup.settings.WakeLightSettingsActivity" />
        <activity android:name="com.recek.huewakeup.settings.SleepLightSettingsActivity" />
        <activity android:name="com.recek.huewakeup.settings.DaysSettingsActivity" />

        <receiver android:name="com.recek.huewakeup.alarm.AlarmStartReceiver" />

        <service android:name="com.recek.huewakeup.alarm.AlarmSoundService" />
    </application>

</manifest>