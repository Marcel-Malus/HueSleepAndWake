<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/alarmTimeTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/txt_set_alarm_schedule" />

    <Switch
        android:id="@+id/alarmSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/alarmTimeTxt"
        android:layout_marginTop="22dp" />

    <EditText
        android:id="@+id/alarmTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alarmTimeTxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:ems="4"
        android:inputType="time"
        android:maxLength="8" />

    <TextView
        android:id="@+id/alarmStatusTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_alignBottom="@+id/alarmTime"
        android:layout_toRightOf="@+id/alarmTime"
        android:layout_toEndOf="@+id/alarmTime"
        android:text="@string/txt_status" />

</RelativeLayout>