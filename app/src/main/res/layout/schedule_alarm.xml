<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/alarmTimeTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/txt_set_alarm_schedule" />

            <Button
                android:id="@+id/pickAlarmSoundBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/alarmTimeTxt"
                android:layout_marginTop="5dp"
                android:text="@string/btn_pick_alarm_sound" />

            <Switch
                android:id="@+id/alarmSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/pickAlarmSoundBtn"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/pickAlarmSoundBtn" />

            <EditText
                android:id="@+id/alarmTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/pickAlarmSoundBtn"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/alarmSwitch"
                android:ems="4"
                android:inputType="time"
                android:maxLength="8" />

            <TextView
                android:id="@+id/alarmStatusTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/alarmTime"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/alarmTime"
                android:text="@string/txt_status" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
