<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp">


            <TextView
                android:id="@+id/alarmTimeTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_sound_alarm" />

            <ImageButton
                android:id="@+id/alarmSettingsBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/alarmTimeTxt"
                android:src="@drawable/ic_settings_black_24dp"
                android:contentDescription="@string/txt_alarm_settings" />

            <Switch
                android:id="@+id/alarmSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/alarmSettingsBtn"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/alarmSettingsBtn"
                android:textOn="@string/onByI"
                android:textOff="@string/offByO"
                android:switchMinWidth="55dp" />

            <EditText
                android:id="@+id/alarmTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/alarmSettingsBtn"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/alarmSwitch"
                android:ems="4"
                android:inputType="time"
                android:maxLength="8" />

            <TextView
                android:id="@+id/alarmStatusTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/alarmTime"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/alarmTime"
                android:text="@string/txt_status" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
